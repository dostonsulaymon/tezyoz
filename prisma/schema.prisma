generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  firstName String?
  lastName  String?
  username  String?
  password  String?

  status UserStatus @default(IN_REGISTRATION)
  role   UserRole   @default(USER)

  mails Mail[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Attempt   Attempt[]

  @@map("user")
}

model Mail {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  otp       String
  email     String
  status    MailStatus @default(PENDING)
  userId    String     @db.ObjectId
  user      User       @relation(fields: [userId], references: [id])
  expiresAt DateTime
  attempts  Int        @default(0)
  usedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mail")
}

model GameMode {
  id    String       @id @default(auto()) @map("_id") @db.ObjectId
  type  GameModeType
  value Int

  attempts Attempt[]
}

model Text {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  language  Language
  content   String
  createdAt DateTime @default(now())

  attempts Attempt[]
}

model Attempt {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String?  @db.ObjectId
  user       User?    @relation(fields: [userId], references: [id])
  language   Language
  gameModeId String   @db.ObjectId
  gameMode   GameMode @relation(fields: [gameModeId], references: [id])

  textId String? @db.ObjectId
  text   Text?   @relation(fields: [textId], references: [id])

  wpm      Float
  accuracy Float
  errors   Int?

  createdAt DateTime @default(now())
}

enum Language {
  UZBEK
  RUSSIAN
  ENGLISH
}

enum GameModeType {
  BY_TIME
  BY_WORD
}

enum MailStatus {
  PENDING
  FAILED
  EXPIRED
  VERIFIED
}

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  IN_REGISTRATION
  ACTIVE
  SUSPENDED
  DELETED
}
