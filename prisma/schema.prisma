generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  firstName String?
  lastName  String?
  username  String?
  password  String?

  status UserStatus @default(IN_REGISTRATION)
  role   UserRole   @default(USER)

  mails Mail[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Mail {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  otp       String
  email     String
  status    MailStatus @default(PENDING)
  userId    String     @db.ObjectId
  user      User       @relation(fields: [userId], references: [id])
  expiresAt DateTime
  attempts  Int        @default(0)
  usedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mail")
}

enum MailStatus {
  PENDING
  FAILED
  EXPIRED
  VERIFIED
}

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  IN_REGISTRATION
  ACTIVE
  SUSPENDED
  DELETED
}
